@{
    var alertMessage = TempData["AlertMessage"]?.ToString() ?? string.Empty;
    var alertTitle = TempData["AlertTitle"]?.ToString() ?? string.Empty;
    var alertType = TempData["AlertType"]?.ToString() ?? "info";
}

@if (!string.IsNullOrWhiteSpace(alertMessage))
{
    <script>
        // Convert C# string to a JS string, then call .toLowerCase() in JS
        const type = "@alertType".toLowerCase();

        switch (type) {
            case "success":
                iziToast.success({
                    title: '@alertTitle',
                    message: '@alertMessage',
                    position: 'topRight'
                });
                break;

            case "warning":
                iziToast.warning({
                    title: '@alertTitle',
                    message: '@alertMessage',
                    position: 'topRight'
                });
                break;

            case "error":
                iziToast.error({
                    title: '@alertTitle',
                    message: '@alertMessage',
                    position: 'topRight'
                });
                break;

            default: // info or any unknown type
                iziToast.info({
                    title: '@alertTitle',
                    message: '@alertMessage',
                    position: 'topRight'
                });
                break;
        }
    </script>
}
