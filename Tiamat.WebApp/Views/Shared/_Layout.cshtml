<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tiamat.WebApp</title>

    <link rel="stylesheet" href="~/lib/iziToast/css/iziToast.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.3/cyborg/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/customstyle.css" />

</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand mx-3" href="#">
                    <img src="~/images/tiamat_logo.png" alt="Tiamat Лого" height="40" id="logo" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Превключване на навигация" style="border: none;">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto d-flex align-items-center" style="gap: 1rem;">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#" id="home-link">Начало</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#" id="about-link">За нас</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#" id="join-link">Присъедини се</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("Dashboard", "User")" class="btn btn-outline-light nav-soft rounded-pill px-4" id="sign-in-btn">
                                    Табло
                                </a>
                            </li>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Home")"
                               class="btn btn-outline-light nav-soft rounded-pill px-4"
                               id="sign-in-btn">
                                Вход
                            </a>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1 container py-5">
        @RenderBody()
    </main>

    <footer class="footer border-top text-muted">
        <div class="container">
            &copy; 2025 - Tiamat.WebApp - <a href="#">Поверителност</a>
        </div>
    </footer>

    <script src="~/lib/iziToast/js/iziToast.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const navbarLinks = document.querySelectorAll(".nav-link");
            navbarLinks.forEach((link) => {
                link.addEventListener("mouseover", function () {
                    link.style.transform = "scale(1.1)";
                    link.style.transition = "transform 0.3s ease";
                });
                link.addEventListener("mouseout", function () {
                    link.style.transform = "rotate(0deg) scale(1)";
                });
                link.addEventListener("click", function (e) {
                    e.preventDefault();
                    showBetaRestrictionMessage();

                    navbarLinks.forEach((navLink) => navLink.classList.remove("active"));
                    this.classList.add("active");
                });
            });

            const signInButton = document.getElementById("sign-in-btn");
            if (signInButton) {
                signInButton.addEventListener("mouseover", function () {
                    this.style.transform = "scale(1.1)";
                });
                signInButton.addEventListener("mouseout", function () {
                    this.style.transform = "scale(1)";
                });
            }

            const logo = document.getElementById("logo");
            if (logo) {
                logo.addEventListener("mouseover", function () {
                    logo.style.transform = "rotate(5deg) scale(1.1)";
                });
                logo.addEventListener("mouseout", function () {
                    logo.style.transform = "rotate(0deg) scale(1)";
                });
                logo.addEventListener("click", function (e) {
                    e.preventDefault();
                    showBetaRestrictionMessage();
                });
            }

            const footerLinks = document.querySelectorAll("footer a");
            footerLinks.forEach(link => {
                link.addEventListener("click", function(e) {
                    e.preventDefault();
                    showBetaRestrictionMessage();
                });
            });

            function showBetaRestrictionMessage() {
                iziToast.info({
                    title: 'БЕТА ВЕРСИЯ',
                    message: 'Забранен достъп до други публични страници. В момента приложението е в тестова фаза и достъпът е ограничен само до входната страница. Благодарим за разбирането!',
                    position: 'topCenter',
                    timeout: 5000,
                    closeOnClick: true,
                    pauseOnHover: true
                });
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
    @Html.Partial("_iziToastPartial")

</body>
</html>