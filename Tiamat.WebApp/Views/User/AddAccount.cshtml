@using Tiamat.Models
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
@model Tiamat.Models.Account
@{
    ViewData["Title"] = "Добавяне на акаунт";
}
<style>
    #particles-js {
        position: fixed !important;
        width: 100% !important;
        height: 100% !important;
        top: 0 !important;
        left: 0 !important;
        z-index: -1 !important;
    }
</style>
<link rel="stylesheet" href="~/css/addAccountStyle.css" />
<div id="particles-js"></div>
<div asp-validation-summary="All" class="text-danger"></div>
<div class="add-account-container">
    <h1 class="title">Добавяне на нов акаунт</h1>
    <div class="add-account-card">
        <form asp-action="AddAccount" asp-controller="User" method="post">
            <div class="form-group">
                <label asp-for="AccountName">Име на акаунт</label>
                <input asp-for="AccountName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="InitialCapital">Начален капитал</label>
                <input asp-for="InitialCapital" type="number" step="0.01" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Platform">Платформа</label>
                <select asp-for="Platform" class="form-control">
                    <option value="MT5">MT5</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="BrokerLogin">Брокерски логин</label>
                <input asp-for="BrokerLogin" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BrokerPassword">Брокерска парола</label>
                <input asp-for="BrokerPassword" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BrokerServer">Брокерски сървър</label>
                <input asp-for="BrokerServer" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AccountSettingsId">Настройки на акаунта</label>
                <select asp-for="AccountSettingsId" class="form-control">
                    <option value="">Избери</option>
                    @foreach (var setting in (ViewBag.AccountSettings as List<AccountSetting> ?? new List<AccountSetting>()))
                    {
                        <option value="@setting.AccountSettingId">@setting.SettingName</option>
                    }
                </select>
            </div>
            <button type="submit" class="submit-btn">Добавяне на акаунт</button>
        </form>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="~/js/particles-init.js"></script>
    @Html.Partial("_IziToastPartial")
    @await Html.PartialAsync("_ValidationScriptsPartial")
}