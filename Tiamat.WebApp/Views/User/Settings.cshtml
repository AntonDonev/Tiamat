@model Tiamat.WebApp.Models.AccountSettingCenterViewModel

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Account Settings";
}

<link rel="stylesheet" href="~/css/accountcenter.css" />

<div class="account-list-container">
    <h1 class="list-title">Account Settings</h1>

    <div class="filter-card">
        <h2 class="filter-title">Filters</h2>
        <form method="post" asp-action="Settings" asp-controller="User" class="filter-form">
            <div class="filter-group">
                <label for="SettingNameFilter">Setting Name</label>
                <input type="text"
                       name="SettingNameFilter"
                       id="SettingNameFilter"
                       class="form-select"
                       value="@Model.SettingNameFilter" />
            </div>

            <div class="filter-submit">
                <button type="submit" class="apply-btn">Apply</button>
            </div>
        </form>
    </div>

    <div class="accounts-card">
        <div class="accounts-card-header">
            <h2>All Settings</h2>
            <div class="add-account-button">
                <a asp-action="AddAccountSetting" asp-controller="User" class="btn-add-account">Add Setting</a>
            </div>
        </div>

        <div class="accounts-card-body">
            @if (Model.Settings == null || !Model.Settings.Any())
            {
                <div class="no-accounts">No settings found.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="account-table" id="accountTable">
                        <thead>
                            <tr>
                                <th>Setting Name</th>
                                <th id="riskHeader" data-sort-dir="asc">
                                    Max Risk per Trade
                                    <i class="fa-solid fa-sort table-sort-icon"
                                       id="riskSortIcon"></i>
                                </th>
                                <th>Untradable Period (minutes)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var setting in Model.Settings)
                            {
                                <tr>
                                    <td>@setting.SettingName</td>
                                    <td>@setting.MaxRiskPerTrade</td>
                                    <td>@setting.UntradablePeriodMinutes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <!-- Sorting logic for Max Risk per Trade -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const table = document.getElementById("accountTable");
            const riskHeader = document.getElementById("riskHeader");
            const riskIcon = document.getElementById("riskSortIcon");

            riskHeader.addEventListener("click", () => {
                let sortDir = riskHeader.dataset.sortDir || "asc";

                let rows = Array.from(table.tBodies[0].rows);
                rows.sort((a, b) => {
                    let aVal = parseFloat(a.cells[1].innerText) || 0;
                    let bVal = parseFloat(b.cells[1].innerText) || 0;
                    return sortDir === "asc" ? aVal - bVal : bVal - aVal;
                });
                rows.forEach(r => table.tBodies[0].appendChild(r));

                // Toggle icon & direction
                if (sortDir === "asc") {
                    riskHeader.dataset.sortDir = "desc";
                    riskIcon.classList.remove("fa-sort", "fa-sort-up");
                    riskIcon.classList.add("fa-sort-down");
                } else {
                    riskHeader.dataset.sortDir = "asc";
                    riskIcon.classList.remove("fa-sort", "fa-sort-down");
                    riskIcon.classList.add("fa-sort-up");
                }
            });
        });
    </script>
}
