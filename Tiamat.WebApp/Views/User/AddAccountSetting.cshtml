@model Tiamat.Models.AccountSetting
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Добавяне на настройка за акаунт";
}
<style>
    #particles-js {
        position: fixed !important;
        width: 100% !important;
        height: 100% !important;
        top: 0 !important;
        left: 0 !important;
        z-index: -1 !important;
    }
</style>
<link rel="stylesheet" href="~/css/addAccountStyle.css" />
<div id="particles-js"></div>
<div class="add-account-container">
    <div class="add-account-card">
        <h1 class="title">Добавяне на нова настройка за акаунт</h1>
        <form method="post" asp-action="AddAccountSetting" asp-controller="User">
            <div class="form-group">
                <label asp-for="SettingName">Име на настройка</label>
                <input asp-for="SettingName" class="form-control" />
                <span asp-validation-for="SettingName"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxRiskPerTrade">Максимален риск за сделка</label>
                <input asp-for="MaxRiskPerTrade" class="form-control" />
                <span asp-validation-for="MaxRiskPerTrade"></span>
            </div>
            <div class="form-group">
                <label asp-for="UntradablePeriodMinutes">Неактивен период (минути)</label>
                <input asp-for="UntradablePeriodMinutes" class="form-control" />
                <span asp-validation-for="UntradablePeriodMinutes"></span>
            </div>
            <button type="submit" class="submit-btn">Създаване</button>
        </form>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="~/js/particles-init.js"></script>
    @Html.Partial("_IziToastPartial")
    @await Html.PartialAsync("_ValidationScriptsPartial")
}